<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewUserProfile">

    <include android:id="@+id/viewprofiletoolbar"
        layout="@layout/default_toolbar"/>
    <ImageView
        android:id="@+id/view_profilepic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/viewprofiletoolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="Profile Image"
        app:srcCompat="@drawable/profile_pic_icon" />

    <TextView
        android:id="@+id/view_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:layout_marginTop="10dp"
        android:layout_below="@id/view_profilepic"
        android:layout_centerHorizontal="true"
        android:textColor="@color/commentTextColor" />


    <LinearLayout
        android:id="@+id/linearViewProfileBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/view_username">


        <Button
            android:id="@+id/btn_addfriend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/cashierbookBlue"
            android:onClick="AddFriend"
            android:text="@string/addfriend"
            android:textColor="@color/White" />

    </LinearLayout>

    <!--View
        android:id="@+id/vpdivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearViewProfileBtn"
        android:layout_weight="1"
        android:background="@color/darkerGrey"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/view_recentpost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/linearViewProfileBtn"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/recentpost"
        android:textColor="@color/commentTextColor" /-->


</RelativeLayout>